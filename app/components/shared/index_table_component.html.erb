<div class="overflow-x-auto">
  <table class="table table-zebra">
    <thead>
      <tr>
        <th></th>
        <% columns.each do |column| %>
          <th><%= column.header %></th>
        <% end %>
      </tr>
    </thead>

    <tbody>
      <% records.each_with_index do |record, index| %>
        <tr>
          <th><%= index + 1 %></th>
          <% columns.each do |column| %>
            <td><%= render_cell_content(record, column) %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
