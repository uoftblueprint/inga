<% if @button_text.present? %>
  <button class="btn" onclick="document.getElementById('<%= @id %>').showModal()"><%= @button_text %></button>
<% end %>
<dialog id="<%= @id %>" class="modal">
  <div class="modal-box w-11/12 max-w-5xl text-base-content">
    <%# render named slot `modal_content` if provided, otherwise render default block `content` or show debug fallback %>
    <% if defined?(modal_content) && modal_content.present? %>
      <%= modal_content %>
    <% elsif defined?(content) && content.present? %>
      <%= content %>
    <% else %>
      <div class="text-red-600 font-semibold">[modal content missing]</div>
    <% end %>
  </div>
  <form method="dialog" class="modal-backdrop">
    <button>close</button>
  </form>
</dialog>
