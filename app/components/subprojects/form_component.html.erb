<%= form_with model: [@project, @subproject], class: "flex flex-col gap-4", builder: DefaultFormBuilder do |form| %>
  <div class="flex flex-col gap-2">
      <div class="flex flex-col gap-1">
        <%= form.label :name %>
        <%= form.text_field :name, required: true, class: "w-full" %>
      </div>
      <div class="flex flex-col gap-1">
        <%= form.label :description %>
        <%= form.text_field :description, class: "w-full" %>
      </div>
      <div class="flex flex-col gap-1">
        <%= form.label :address %>
        <%= form.text_field :address, class: "w-full" %>
      </div>
      <div class="flex flex-col gap-1">
        <%= form.label :region_id %>
        <%= form.collection_select :region_id, Region.order(:name), :id, :name, { prompt: t(".select_a_region"), required: true }, { class: "w-full" } %>
      </div>
  </div>
  <div class="flex justify-end">
    <%= form.modal_cancel %>
    <%= form.submit %>
  </div>
<% end %>
