<%= form_with model: [project, subproject, journal], builder: DefaultFormBuilder do |form| %>
  <div class="w-3/4 mx-auto p-4">
    <h2 class="text-xl font-semibold mb-3"><%= title %></h2>
    <div class="flex flex-col gap-2">
      <div class="flex flex-col gap-1">
        <%= form.label :markdown_content, t(".content"), class: "block text-sm font-medium text-gray-700" %>
        <%= form.rich_text_area :markdown_content, class: "min-h-[200px] border border-gray-200 rounded p-2" %>
      </div>
    </div>
    <div class="mt-4">
      <%= form.submit class: "w-full btn btn-neutral" %>
    </div>
  </div>
<% end %>
