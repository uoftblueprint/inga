<div style="max-width: 600px; margin: 0 auto; padding: 40px;">
  <h1 style="text-align: center; margin-bottom: 20px;"><b>Users</b></h1>

  <div style="display: flex; justify-content: center; margin-bottom: 30px;">
    <%= form_with url: users_path, method: :get do |form| %>
      <div>
        <%= form.label :username, "Search by username:" %>
        
        <%= form.text_field :username, value: params[:username] %>
        
        <%= form.submit "Search" %>
      </div>
    <% end %>
  </div>

  <div style="text-align: center; margin-bottom: 20px;">
    <%= link_to "New User", new_user_path %>
  </div>

  <ul style="list-style: none; padding: 80px;">
    <% @users.each do |user| %>
      <li style="display: grid; grid-template-columns: 200px auto; align-items: center; gap: 10px; margin-bottom: 10px;">
        <%= link_to user.username, user_path(user) %>
        <%= 
            button_to "Delete", 
            user_path(user), 
            method: :delete, 
            data: { turbo_confirm: "Are you sure?" } 
        %>
      </li>
    <% end %>
  </ul>
</div>
