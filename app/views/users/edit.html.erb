<div class="max-w-120 my-12 mx-auto">
  <h1 class="text-3xl font-bold mb-6">Edit User</h1>

  <%= form_with model: @user, class: "flex flex-col gap-4" do |form| %>
    <div class="flex flex-col gap-2">
      <div class="flex flex-col gap-1">
        <%= form.label :username %>
        <%= form.text_field :username, required: true, class: "w-full" %>
      </div>

      <div class="flex flex-col gap-1">
        <%= form.label :password, "New Password" %>
        <%= form.password_field :password, class: "w-full" %>
      </div>

      <div class="flex flex-col gap-1">
        <%= form.label :password_confirmation, "Confirm New Password" %>
        <%= form.password_field :password_confirmation, class: "w-full" %>
      </div>
    </div>

    <%= form.submit "Update User" %>
  <% end %>
</div>
