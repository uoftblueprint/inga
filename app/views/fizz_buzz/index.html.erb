<h1>FizzBuzz</h1>

<%= form_with url: fizz_buzz_path, method: :get, local: true do |form| %>
  <%= form.label :number, "Enter a number:" %>
  <%= form.number_field :number, required: true %>
  <%= form.submit "Check" %>
<% end %>

<% if @result.present? %>
  <h2>Result:</h2>
  <p><%= @result %></p>
<% end %>

