<div class="flex justify-center items-start min-h-screen px-4 py-10">
  <fieldset class="fieldset bg-base-200 border-base-300 rounded-box w-full max-w-sm border p-4 sm:p-6">
    <legend class="fieldset-legend text-base sm:text-lg font-semibold">Login</legend>

  <%= form_with url: login_path, local: true do |form| %>
    <div>
      <label class="label mb-1">Username</label>
      <%= form.text_field :username, required: true, class: "input w-full", placeholder: "Username" %>
    </div>

    <div class="mt-2">
      <label class="label mb-1">Password</label>
      <%= form.password_field :password, required: true, class: "input w-full", placeholder: "Password" %>
    </div>

    <div class="mt-4">
      <%= form.submit "Login", class: "btn btn-neutral w-full" %>
    </div>
  <% end %>
  </fieldset>
</div>
